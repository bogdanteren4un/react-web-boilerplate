{
  "name": "react-boilerplate",
  "version": "0.0.1",
  "license": "MIT",
  "scripts": {
    "start:dev": "cross-env NODE_ENV=\"development\" webpack-dev-server --inline --progress --port 3000 --config ./config/webpack.dev.js",
    "start:prod": "cross-env NODE_ENV=\"development\" webpack-dev-server --inline --progress --port 3000 --config ./config/webpack.prod.js",
    "build:dev": "cross-env NODE_ENV=\"development\" webpack --progress --config ./config/webpack.dev.js",
    "build:prod": "cross-env NODE_ENV=\"development\" webpack --progress --config ./config/webpack.prod.js",
    "test": "jest --coverage --passWithNoTests"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "classnames": "^2.2.6",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^6.0.1",
    "react-router-dom": "^4.3.1",
    "redux": "^4.0.1",
    "redux-form": "^8.1.0",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/enzyme": "^3.9.3",
    "@types/enzyme-adapter-react-16": "^1.0.5",
    "@types/jest": "^24.0.14",
    "@types/node": "^11.9.4",
    "@types/react": "^16.8.4",
    "@types/react-dom": "^16.8.2",
    "@types/react-redux": "^7.0.1",
    "@types/react-router-dom": "^4.3.2",
    "@types/redux": "^3.6.0",
    "@types/redux-form": "^7.5.2",
    "autoprefixer": "^9.4.8",
    "copy-webpack-plugin": "^5.0.4",
    "cross-env": "^6.0.3",
    "css-loader": "^2.1.0",
    "dotenv-webpack": "^1.7.0",
    "enzyme": "^3.10.0",
    "enzyme-adapter-react-16": "^1.14.0",
    "file-loader": "^3.0.1",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^24.8.0",
    "node-sass": "^4.11.0",
    "postcss-flexbugs-fixes": "^4.1.0",
    "postcss-loader": "^3.0.0",
    "prettier": "^1.16.4",
    "react-svg-loader": "^2.1.0",
    "sass-loader": "^7.1.0",
    "source-map-loader": "^0.2.4",
    "style-loader": "^0.23.1",
    "ts-jest": "^24.0.2",
    "ts-loader": "^5.3.3",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "tslint-eslint-rules": "^5.4.0",
    "tslint-plugin-prettier": "^2.0.1",
    "tslint-react": "^3.6.0",
    "ttf-loader": "^1.0.2",
    "typescript": "^3.3.3",
    "uglifyjs-webpack-plugin": "^1.1.6",
    "url-loader": "^1.1.2",
    "webpack": "^4.29.5",
    "webpack-cli": "^3.2.3",
    "webpack-dev-middleware": "^3.6.0",
    "webpack-dev-server": "^3.2.0",
    "webpack-hot-middleware": "^2.24.3",
    "webpack-merge": "^4.2.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.ts"
    ],
    "transform": {
      ".(ts|tsx)": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!<rootDir>/node_modules/"
    ],
    "coverageThreshold": {
      "global": {
        "lines": 80,
        "branches": 80,
        "functions": 80,
        "statements": 80
      }
    },
    "coverageReporters": [
      "text"
    ],
    "transformIgnorePatterns": [
      "<rootDir>/node_modules/"
    ]
  },
  "browserslist": [
    ">1%",
    "last 4 versions",
    "Firefox ESR",
    "not ie < 9"
  ]
}
