{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-eslint-rules",
    "tslint-config-prettier"
  ],
  "rules": {
    "prettier": true,
    "no-console": false,
    "no-submodule-imports": false,
    "prettier/prettier": "error",
    "ordered-imports": false,
    "jsx-no-lambda": false,
    "interface-over-type-literal": false,
    "member-access": [true, "no-public"],
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ]
  },
  "defaultSeverity": "error",
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
